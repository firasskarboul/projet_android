<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/recyclerviewbg">

        <TextView
            android:id="@+id/username"
            android:layout_width="77dp"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:text="username"
            app:layout_constraintStart_toEndOf="@+id/imageViewUserRec"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewUserRec"
            android:layout_width="63dp"
            android:layout_height="96dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewBioView"
            android:layout_width="301dp"
            android:layout_height="66dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toEndOf="@+id/imageViewUserRec" />

        <TextView
            android:id="@+id/textViewRegionV"
            android:layout_width="138dp"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewBioView"
            app:layout_constraintStart_toEndOf="@+id/username" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>