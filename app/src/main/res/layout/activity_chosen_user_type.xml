<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ChosenUserTypeActivity">

    <ImageView
        android:id="@+id/imageViewGuide"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/bg_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewTourist"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icc_guide" />

    <ImageView
        android:id="@+id/imageViewTourist"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="204dp"
        android:layout_marginEnd="19dp"
        android:background="@drawable/bg_border"
        app:layout_constraintEnd_toStartOf="@+id/imageViewGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_touriste" />

    <Button
        android:id="@+id/buttonImGuide"
        android:layout_width="190dp"
        android:layout_height="50dp"

        android:layout_marginTop="8dp"
        android:text="I AM Guide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintStart_toEndOf="@+id/buttonImTourist"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGuide"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonImTourist"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="I am tourist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewTourist"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>